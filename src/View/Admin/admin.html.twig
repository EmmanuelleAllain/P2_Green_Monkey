{% extends 'layout.html.twig' %}

{% block title %}
	{{parent()}}- Admin
{% endblock %}

{% block content %}
    <h1>Espace administrateur</h1>
    <p>Vous souhaitez modifier la valeur d'une question ? C'est par ici !</p>
    
    
      <div class="accordion accordion-flush" id="accordionFlushExample">
      {% for items in values|batch(4) %}
        <div class="accordion-item">
          <h2 class="accordion-header" id="flush-headingOne">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
            data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
            Question
            </button>
          </h2>
          <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
            <div class="accordion-body">
            {% for value in items %}
            <form method="post">
              <p>{{ value.label }} : {{value.answer_value}}
              </p>
              <p>
                    <input type="hidden" id="id" name="id" value="{{ value.id }}">
                    <label for="answer_value">Nouvelle valeur de r√©ponse :</label>
                    <input type="number" step=".01" id="answer_value" name="answer_value">
                    <input type="submit" value="Modifier la valeur">
              </p>
            </form> 
            {% endfor %}
            </div>
          </div>
        </div>
      {% endfor %}
      </div>
        
{% endblock %}